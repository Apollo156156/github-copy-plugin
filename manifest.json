{
    "name": "Devman Review Snippet",
    "version": "1.0",
    "description": "Copy code and format for review on Devman site.",
    "manifest_version": 2,

    "permissions": [
        "activeTab",
        "clipboardWrite",
        "clipboardRead",
        "tabs"
    ],

    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_idle",
            "all_frames": true,
            "css": ["enhancements-search/enhancements.css"],
            "js": [
                "text-tools.js",
                "animations.js",
                "sites/github.com.js",
                "sites/repl.it.js",
                "sites/noname.js",
                "script.js",
                "enhancements-search/open-dialog.js"
            ]
        }
    ],
    "background": {
      "scripts": [
        "external-libraries/xregexp-all.js",
        "external-libraries/lodash.min.js",
        "enhancements-search/search.js"
      ],
      "persistent": false
    }
}
